@{
  Layout="_Layout";
}

@model PierreTreats.Models.Treat

<h2>Add Flavor to treat @Html.DisplayFor(model=>model.TreatName)</h2>

<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}

<hr />
<p>@Html.ActionLink("Back to Treats", "Index")</p>
