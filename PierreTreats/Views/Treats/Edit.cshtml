@{
  Layout = "_Layout";
}

@model PierreTreats.Models.Treat

<h4>Edit @Html.DisplayFor(model => model.TreatName)</h4>

<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model =>model.TreatId)
  @Html.Label("Treat Name: ")
  @Html.EditorFor(model =>model.TreatName)

  <input type="submit" value="Save" />
}

<hr />
<p>@Html.ActionLink("Back to treat details", "Details", new {id=Model.TreatId})</p>
<p>@Html.ActionLink("Back to all treats", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p> 